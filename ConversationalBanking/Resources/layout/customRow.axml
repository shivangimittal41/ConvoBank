<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:minWidth="25px"
    android:minHeight="25px"
    android:clipToPadding="false">
    <android.support.v7.widget.CardView xmlns:app="http://schemas.android.com/apk/res-auto"
        android:minWidth="25px"
        android:minHeight="25px"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/cardView1"
        app:cardCornerRadius="4dp"
        app:cardElevation="2dp"
        app:cardUseCompatPadding="false"
        android:clipToPadding="false"
        android:layout_marginBottom="12dp"
        android:layout_marginTop="4dp"
        android:layout_marginRight="16dp"
        android:layout_marginLeft="16dp">
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/linearLayout3"
            android:paddingBottom="12dp">
            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/linearLayout4"
                android:weightSum="1"
                android:background="@color/titleLight"
                android:paddingLeft="20dp"
                android:paddingRight="20dp"
                android:paddingTop="8dp"
                android:paddingBottom="8dp"
                android:layout_marginBottom="8dp">
                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:id="@+id/linearLayout5"
                    android:gravity="center_vertical"
                    android:layout_weight="1">
                    <TextView
                        android:text="Transaction Id: "
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:id="@+id/textView1"
                        style="@style/helpingText"
                        android:gravity="center_vertical"
                        android:layout_marginRight="2dp" />
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        style="@style/availableBalance"
                        android:gravity="center_vertical"
                        android:text="@string/default_TxnId"
                        android:layout_marginLeft="2dp"
                        android:id="@+id/recyclerView_TxnId" />
                </LinearLayout>
                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:id="@+id/linearLayout5"
                    android:gravity="center_vertical"
                    android:layout_weight="1">
                    <TextView
                        android:text="Transaction Date: "
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:id="@+id/textView1"
                        style="@style/helpingText"
                        android:gravity="center_vertical"
                        android:layout_marginRight="2dp" />
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:id="@+id/recyclerView_Date"
                        style="@style/availableBalance"
                        android:gravity="center_vertical"
                        android:text="@string/default_date"
                        android:layout_marginLeft="2dp" />
                </LinearLayout>
            </LinearLayout>
            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/linearLayout6"
                android:weightSum="1"
                android:layout_marginBottom="8dp"
                android:layout_marginTop="4dp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp">
                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:id="@+id/linearLayout7"
                    android:layout_weight="0.7"
                    android:gravity="center_vertical">
                    <ImageView
                        android:src="@drawable/currency_sign"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:id="@+id/imageView2"
                        android:layout_marginRight="4dp"
                        style="@style/blueTint" />
                    <TextView
                        android:text="@string/default_balance"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:id="@+id/recyclerView_Amount"
                        android:layout_marginLeft="4dp"
                        android:singleLine="true"
                        style="@style/availableBalance"
                        android:gravity="center_vertical"
                        android:textSize="20sp" />
                </LinearLayout>
            </LinearLayout>
            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/linearLayout3"
                android:weightSum="1"
                android:gravity="center_vertical"
                android:layout_marginBottom="4dp"
                android:layout_marginTop="4dp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp">
                <TextView
                    android:text="Account Name "
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:id="@+id/textView1"
                    android:layout_weight="0.1"
                    style="@style/helpingText"
                    android:gravity="left|center_vertical" />
                <TextView
                    android:text="@string/default_customerName"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:id="@+id/recyclerView_AccountName"
                    android:layout_weight="0.9"
                    style="@style/availableBalance"
                    android:singleLine="true"
                    android:gravity="right|center_vertical" />
            </LinearLayout>
            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/linearLayout3"
                android:weightSum="1"
                android:gravity="center_vertical"
                android:layout_marginBottom="8dp"
                android:layout_marginTop="4dp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp">
                <TextView
                    android:text="Account Number "
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:id="@+id/textView1"
                    android:layout_weight="0.1"
                    style="@style/helpingText"
                    android:gravity="left|center_vertical" />
                <TextView
                    android:text="@string/default_accNumber"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:id="@+id/recyclerView_AccountNumber"
                    android:layout_weight="0.9"
                    style="@style/availableBalance"
                    android:singleLine="true"
                    android:gravity="right|center_vertical" />
            </LinearLayout>
            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/linearLayout3"
                android:weightSum="1"
                android:gravity="center_vertical"
                android:layout_marginBottom="4dp"
                android:layout_marginRight="20dp"
                android:layout_marginLeft="20dp">
                <TextView
                    android:text="Remarks"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:id="@+id/textView1"
                    android:layout_weight="0.1"
                    style="@style/helpingText"
                    android:gravity="left|center_vertical" />
                <TextView
                    android:text="@string/default_Remarks"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:id="@+id/recyclerView_Remarks"
                    android:layout_weight="0.9"
                    style="@style/availableBalance"
                    android:singleLine="false"
                    android:gravity="left" />
            </LinearLayout>
        </LinearLayout>
    </android.support.v7.widget.CardView>
</LinearLayout>